<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Nouveau Paiement"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="24dp"/>
        <TextView
            android:id="@+id/lblSelectDette"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SÃ©lectionner la dette Ã  payer :"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerDettes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="10dp"
            android:minHeight="48dp"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown" />

        <!-- Card avec les infos de la dette -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtDetteInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pour : Dette"
                    android:textSize="16sp"
                    android:textColor="#1976D2"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/txtMontantRestant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reste Ã  payer : 0 FCFA"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#F44336"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Champ Montant -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Montant du paiement (FCFA)"
            app:startIconDrawable="@android:drawable/ic_menu_today"
            app:startIconTint="#4CAF50"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="#4CAF50">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editMontant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mode de paiement -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode de paiement"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/radioGroupMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:id="@+id/radioEspeces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’µ  EspÃ¨ces"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/radioMobileMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“±  Mobile Money "
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/radioVirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ¦  Virement bancaire"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@android:drawable/dialog_holo_light_frame"/>

        </RadioGroup>

        <!-- Champ Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Date du paiement (optionnel)"
            app:endIconMode="custom"
            app:endIconDrawable="@android:drawable/ic_menu_today"
            app:endIconTint="#2196F3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â„¹ Si vous ne choisissez pas de date, la date du jour sera utilisÃ©e"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"/>

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <!-- Bouton Enregistrer -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text=" Enregistrer le paiement"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"/>

        <!-- Bouton Annuler -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text=" Annuler"
            android:textSize="16sp"
            android:backgroundTint="#757575"
            android:textColor="#FFFFFF"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="8dp"/>

    </LinearLayout>

</ScrollView>
