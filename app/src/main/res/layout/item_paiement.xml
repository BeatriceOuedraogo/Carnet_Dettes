<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom du Client"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/txtMontant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000 FCFA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"/>

            <TextView
                android:id="@+id/txtModePaiement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode : EspÃ¨ces"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="2dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnModifier"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_edit"
                android:textColor="#999999"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/btnSupprimer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:textColor="#FFFFFF"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>